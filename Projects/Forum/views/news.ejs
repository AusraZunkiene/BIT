<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Naujienos</title>
    <link rel="stylesheet" href="public/main.css">
</head>
<body>
    <%- include('./components/header.ejs') %>
    <div class="container">  
        <div class="section">
            <%- include('./components/infoMessage.ejs') %> <%-
			include('./components/errorMessage.ejs') %>
            <div class="sectionTitle">General discussion</div>
            <a
            href="/new-post"
            class="message1"
            >Create new post</a
        >
            <div class="container gap-from-top">
                <table>
                    <thead>
                        <tr>
                            <th class="col-6">Topics</th>
                            <th class="col-1">Replies</th>
                            <th class="col-1">Views</th>
                            <th class="col-4">Last post</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for( const post of posts ) { %> <%-
                            include('./components/table.ejs', {post}) %> <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>